
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Product
                <small>Add</small>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
        <div class="col-lg-7" style="padding-bottom:120px">

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="TenSanPham" value="@Model.TenSanPham" />
            </div>
            <input type="hidden" name="MaSanPham" value="@Model.MaSanPham" />
            <div class="form-group">
                <label>Price</label>
                <input class="form-control" name="Gia" value="@Model.Gia" />
            </div>

            <div class="form-group">
                <label>Loại Sản Phẩm: </label>
                <select name="LoaiSp">
                    @foreach (var item in ViewBag.dslsp)
                    {
                        <option value="@item.MaLoaiSanPham">@item.TenLoaiSanPham</option>
                    }

                </select>

            </div>
            <div class="form-group">
                <label>Images</label>
                <input type="file" name="HinhAnh">
            </div>

            <div class="form-group">
                <label>Product Description</label>
                <textarea class="form-control tinymce" rows="3" name="MoTa">@Model.MoTa</textarea>
            </div>

            <button type="submit" class="btn btn-default">Product Edit</button>
            <button type="reset" class="btn btn-default">Reset</button>

        </div>
    </div>
}