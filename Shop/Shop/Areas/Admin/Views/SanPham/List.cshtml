
@{
    ViewBag.Title = "List";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Product
            <small>List</small>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr align="center">
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Date</th>
                <th>Status</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.list)
            {
                <tr class="odd gradeX" align="center">
                    <td>1</td>
                    <td>@item.TenSanPham</td>
                    <td>@item.Gia</td>
                    <td>3 Minutes Age</td>
                    <td>@item.MoTa</td>
                    <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="@Url.Action("Delete", "SanPham", new { id=item.MaSanPham })"> Delete</a></td>
                    <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="@Url.Action("Edit", "SanPham", new { id=item.MaSanPham })">Edit</a></td>
                </tr>

            }   
            
            
        </tbody>
    </table>
</div>